<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://use.fontawesome.com/2e7b5ddcf5.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script src="/script/main.js"></script>
    <title>Skycast</title>
</head>
<body>
    <nav>
        <div class="inner">
            <h1>Skycast</h1>
            <a href="https://azureowl.github.io/azureowl-portfolio/index.html">Home</a>
        </div>
    </nav>

    <header>
        <div class="search">
            <form id="searchForm" action="/" method="post">
                <input type="text" id="address" name="address" placeholder="1600 Amphitheatre Parkway Mountain View, CA 94043" value="{{address}}">
                <button type="submit"><i class="fa fa-search"></i></button>
            </form>    
        </div>
    </header>

    <div class="display">
        <div class="today">
            <div class="weather">
                <p class="alert" data-alert={{alertsTrue}}><i class="fa fa-exclamation-circle"></i> {{alert}}</p>
                <div class="weather-main">
                    <div>
                        <canvas id="icon1" width="65" height="65" class={{icon}}></canvas>
                    </div>
                    <div>
                        <span class="weather-attr">{{temp}}&deg;</span>
                        <span class="weather-attr">{{summary}}</span>
                        <div class="secondary">
                            <span><span class="weather-attr">Feels like:</span> {{feelsLike}}&deg;</span>
                            <span><span class="weather-attr">Low:</span> {{dailyLow}}&deg;</span>
                            <span><span class="weather-attr">High:</span> {{dailyHigh}}&deg;</span>
                        </div>
                    </div>
                </div>
                <div class="hourly">{{hourly}}</div>
            </div>
        </div>
    </div>
    <script src='https://darksky.net/map-embed/@temperature,{{lat}},{{long}},7.js?embed=true&timeControl=true&fieldControl=true&defaultField=temperature&defaultUnits=_f'></script>
    <script src="/skycons/skycons.js"></script>
</body>
</html>